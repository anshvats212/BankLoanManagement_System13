@model LoanApplication.Models.Repayment

@{
    ViewData["Title"] = "Confirm Payment";
}

<div class="container mt-4">
    <h1 class="display-4">Confirm Payment</h1>

    <h3 class="mb-3">Are you sure you want to process the payment for the following installment?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DueDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DueDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.AmountDue)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AmountDue)
            </dd>
        </dl>

        <form asp-action="ProcessPayment" class="mt-3">
            <input type="hidden" asp-for="RepaymentId" />
            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-check-circle-fill me-1"></i> Confirm Payment
            </button>
            <a asp-action="GetRepaymentSchedule" asp-route-id="@Model.ApplicationId" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Schedule
            </a>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
}

