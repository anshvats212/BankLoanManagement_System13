@* @model IEnumerable<LoanProduct.Repository.Models.LoanProduct> *@

    @using BankLoan_Management133.Repositoryy.Models
@model IEnumerable<LoanProduct>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th class="text-center " scope="col">
                @Html.DisplayNameFor(model => model.pname)
            </th>
            <th class="text-center" scope="col">
                @Html.DisplayNameFor(model => model.interest)
            </th>
            <th class="text-center" scope="col">
                @Html.DisplayNameFor(model => model.minAmount)
            </th>
            <th class="text-center" scope="col">
                @Html.DisplayNameFor(model => model.maxAmount)
            </th>
            <th class="text-center" scope="col">
                @Html.DisplayNameFor(model => model.tenure)
            </th>
            <th class="text-center" scope="col">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr scope="row">
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.pname)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.interest)%
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.minAmount)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.maxAmount)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.tenure)
                </td>
                <td class="text-light">
                    <a class="text-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="text-light" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="text-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
