@{
    ViewData["Title"] = "Customer Management Dashboard";
}

<style>
    /* Amazing & Modern Dashboard Styles */
    :root {
        --primary: #2979ff; /* Vibrant Blue */
        --secondary: #4fc3f7; /* Light Blue */
        --accent: #ffca28; /* Yellow */
        --gradient-start: #29b6f6; /* Light Cyan */
        --gradient-end: #03a9f4; /* Cyan */
        --light: #f0f4c3; /* Light Lime */
        --dark: #263238; /* Dark Blue Gray */
        --text-primary: var(--dark);
        --text-secondary: #78909c; /* Blue Gray */
        --card-bg: #fff;
        --card-shadow: rgba(0, 0, 0, 0.15);
        --border-radius: 12px;
        --transition-duration: 0.3s;
        --font-family: 'Montserrat', sans-serif;
    }

    body {
        font-family: var(--font-family);
        background: linear-gradient(to top right, var(--gradient-start), var(--gradient-end));
        color: var(--text-primary);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow-x: hidden; /* Prevent horizontal scrollbar */
    }

    .container {
        max-width: 1100px;
        margin: 60px auto;
        padding: 40px;
        background-color: rgba(255, 255, 255, 0.95); /* Slightly transparent white */
        box-shadow: 0 10px 30px var(--card-shadow);
        border-radius: var(--border-radius);
    }

    h1 {
        color: var(--primary);
        margin-bottom: 50px;
        text-align: center;
        font-size: 3.5rem;
        font-weight: 700;
        letter-spacing: -0.05rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.05);
    }

    .dashboard-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 50px;
    }

    .dashboard-card {
        background-color: var(--card-bg);
        box-shadow: 0 5px 15px var(--card-shadow);
        border-radius: var(--border-radius);
        padding: 30px;
        text-align: center;
        transition: transform var(--transition-duration) ease-in-out, box-shadow var(--transition-duration) ease-in-out;
        position: relative;
        overflow: hidden; /* For pseudo-element animation */
    }

        .dashboard-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background-color: var(--secondary);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.4s ease-out;
        }

        .dashboard-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

            .dashboard-card:hover::before {
                transform: scaleX(1);
            }

        .dashboard-card i {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 20px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.08);
        }

        .dashboard-card h3 {
            color: var(--text-primary);
            margin-bottom: 15px;
            font-size: 1.8rem;
            font-weight: 600;
        }

        .dashboard-card p {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-bottom: 25px;
            line-height: 1.6;
        }

        .dashboard-card a {
            display: inline-block;
            text-decoration: none;
            color: var(--secondary);
            font-weight: 600;
            transition: color var(--transition-duration) ease;
            padding-bottom: 5px;
            border-bottom: 2px solid transparent;
        }

            .dashboard-card a:hover {
                color: var(--primary);
                border-bottom-color: var(--primary);
            }

    .feature-list {
        margin-top: 40px;
        padding: 0;
        list-style: none;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 20px;
    }

        .feature-list li {
            background-color: var(--card-bg);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border-radius: var(--border-radius);
            padding: 25px;
            display: flex;
            align-items: center;
            transition: transform var(--transition-duration) ease-in-out;
        }

            .feature-list li:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 12px rgba(0, 0, 0, 0.1);
            }

            .feature-list li i {
                font-size: 2rem;
                color: var(--accent);
                margin-right: 20px;
            }

            .feature-list li div {
                flex-grow: 1;
            }

            .feature-list li span {
                font-weight: 600;
                color: var(--text-primary);
                display: block;
                margin-bottom: 5px;
            }

            .feature-list li p {
                color: var(--text-secondary);
                font-size: 0.95rem;
                margin: 0;
            }

    .footer {
        margin-top: auto;
        background-color: rgba(255, 255, 255, 0.9);
        color: var(--text-secondary);
        text-align: center;
        padding: 25px 0;
        border-top: 1px solid #eee;
        font-size: 0.9rem;
    }

        .footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

            .footer a:hover {
                text-decoration: underline;
                color: var(--secondary);
            }
</style>

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap">
