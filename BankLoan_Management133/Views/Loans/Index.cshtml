@model IEnumerable<LoanApplication.Models.Loan>

@{
    ViewData["Title"] = "Loan Applications";
}

<div class="container mt-4">
    <h1 class="display-4">Loan Applications</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i> Create New Loan
        </a>
    </p>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LoanAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InterestRate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TermInMonths)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoanAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InterestRate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TermInMonths)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ApplicationId" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-eye me-1"></i> Details
                                    </a>
                                    <a asp-action="GetRepaymentSchedule" asp-controller="Repayment" asp-route-id="@item.ApplicationId" class="btn btn-success btn-sm">
                                        <i class="bi bi-calendar-event me-1"></i> Repayment
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="lead">No loan applications found.</p>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
}

@section Scripts {
    <script>
        // Optional: You can add some JavaScript here for interactive elements if needed.
    </script>
}