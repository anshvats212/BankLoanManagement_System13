@model BankLoan_Management133.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register as Customer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-lg p-4">
                <div class="card-header bg-primary text-white rounded-top">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"><i class="bi bi-person-fill me-2"></i> Full Name</label>
                            <input asp-for="Name" class="form-control form-control-lg rounded-pill" placeholder="Enter your full name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email Address</label>
                            <input asp-for="Email" class="form-control form-control-lg rounded-pill" placeholder="Enter your email address" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"><i class="bi bi-key-fill me-2"></i> Password</label>
                            <input asp-for="Password" class="form-control form-control-lg rounded-pill" placeholder="Enter your password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"><i class="bi bi-key-fill me-2"></i> Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-pill" placeholder="Confirm your password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"><i class="bi bi-telephone-fill me-2"></i> Phone Number</label>
                            <input asp-for="Phone" class="form-control form-control-lg rounded-pill" placeholder="Enter your phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"><i class="bi bi-house-fill me-2"></i> Address/Specialty</label>
                            <input asp-for="Address" class="form-control form-control-lg rounded-pill" placeholder="Enter your address or specialty" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Kyc" class="form-label"><i class="bi bi-house-fill me-2"></i>Kyc</label>
                            <input asp-for="Kyc" class="form-control form-control-lg rounded-pill" placeholder="Enter your Kyc Status" />
                            <span asp-validation-for="Kyc" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Register</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="mb-0">Already have an account? <a asp-action="Login" class="text-info"><i class="bi bi-box-arrow-in-right-fill me-2"></i> Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .card {
        border: none;
    }

    .card-header {
        border-bottom: none;
    }

    .form-label i {
        color: #007bff; /* Primary color for icons */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}