@{
    ViewData["Title"] = "Logout Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-lg p-5">
                <div class="text-center">
                    <h2 class="text-success"><i class="bi bi-check-circle-fill me-2"></i> Successfully Logged Out</h2>
                    <p class="lead mb-4">You have been successfully logged out of your account.</p>
                    <a asp-action="Login" class="btn btn-primary rounded-pill">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">