@model IEnumerable<BankLoan_Management133.Repositoryy.Models.customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-lg p-4">
        <div class="card-header bg-primary text-white rounded-top">
            <h2 class="mb-0"><i class="bi bi-people-fill me-2"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Index" class="btn btn-success btn-sm rounded-pill"><i class="bi bi-plus-circle-fill me-2"></i> Create New Customer</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover bg-white rounded shadow-sm">
                    <thead class="bg-light">
                        <tr>
                            <th>
                                <i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                <i class="bi bi-telephone-fill me-2"></i> @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                <i class="bi bi-map-fill me-2"></i> @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                <i class="bi bi-shield-check-fill me-2"></i> @Html.DisplayNameFor(model => model.KycStatus)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.KycStatus)</span>
                                </td>
                                <td>
                                    <a asp-action="Index" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-primary rounded-pill me-2"><i class="bi bi-pencil-fill"></i> Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-danger rounded-pill"><i class="bi bi-trash-fill"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .card {
        border: none;
    }

    .card-header h2 {
        margin-bottom: 0;
    }

    .table th i, .table td a i {
        vertical-align: middle;
    }
</style>