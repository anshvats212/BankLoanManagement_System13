@model BankLoan_Management133.Repositoryy.Models.customer

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 edit-container">
            <div class="card shadow-lg rounded-lg p-4">
                <div class="edit-profile-header mb-4">
                    <h2 class="text-center text-primary">Edit Your Profile</h2>
                    <hr class="border-primary" />
                </div>
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="CustomerId" />
                    <input type="hidden" asp-for="Email" value="@Model.Email" />
                    <input type="hidden" asp-for="Passward" value="@Model.Passward" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Full Name</label>
                        <input asp-for="Name" class="form-control form-control-lg rounded-pill" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control form-control-lg rounded-pill" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Specialty</label>
                        <input asp-for="Address" class="form-control form-control-lg rounded-pill" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="KycStatus" class="form-label">Qualification</label>
                        <input asp-for="KycStatus" class="form-control form-control-lg rounded-pill" />
                        <span asp-validation-for="KycStatus" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">Update Profile</button>
                    </div>

                    <div class="mt-3 text-center">
                        <a asp-action="Dashboard" asp-route-CustomerId="@Model.CustomerId" class="btn btn-secondary rounded-pill">Back to Dashboard</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}